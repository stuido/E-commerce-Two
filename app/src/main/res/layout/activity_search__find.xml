<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honey.e_commerce.activity.Search_FindActivity">
    <include layout="@layout/include_search"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zongheorder"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="综合排序"/>
        <TextView
            android:id="@+id/salespreferred"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="销量优先"/>
        <TextView
            android:id="@+id/screen"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:text="筛选"/>
        <ImageView
            android:id="@+id/mode_switch_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_goods_list_hor"
            />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.honey.e_commerce.view.LoadMoreRecyclerView
            android:id="@+id/list"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/searchlist_item" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
